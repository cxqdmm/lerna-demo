{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES5", "ES6", "DOM"],
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}