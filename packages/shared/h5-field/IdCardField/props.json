{
  "componentName": "IdCardField",
  "componentTitle": "身份证输入框",
  "importDesc": "import { IdCardField } from '@shared/h5-field'",
  "description": "专用于身份证号码输入的表单组件，支持15位和18位身份证校验、信息解析等功能",
  "props": [
    {
      "name": "modelValue",
      "title": "绑定值",
      "type": "string",
      "required": false,
      "description": "身份证号码值",
      "default": "",
      "control": "input"
    },
    {
      "name": "label",
      "title": "标签文本",
      "type": "string",
      "required": false,
      "description": "输入框的标签",
      "default": "身份证号码",
      "control": "input"
    },
    {
      "name": "placeholder",
      "title": "占位符",
      "type": "string",
      "required": false,
      "description": "输入框占位符文本",
      "default": "请输入身份证号码",
      "control": "input"
    },
    {
      "name": "required",
      "title": "是否必填",
      "type": "boolean",
      "required": false,
      "description": "是否为必填项",
      "default": false,
      "control": "switch",
      "options": [true, false]
    },
    {
      "name": "readonly",
      "title": "是否只读",
      "type": "boolean",
      "required": false,
      "description": "是否为只读状态",
      "default": false,
      "control": "switch",
      "options": [true, false]
    },
    {
      "name": "disabled",
      "title": "是否禁用",
      "type": "boolean",
      "required": false,
      "description": "是否禁用输入框",
      "default": false,
      "control": "switch",
      "options": [true, false]
    },
    {
      "name": "clearable",
      "title": "显示清除按钮",
      "type": "boolean",
      "required": false,
      "description": "是否显示清除按钮",
      "default": true,
      "control": "switch",
      "options": [true, false]
    },
    {
      "name": "name",
      "title": "字段名称",
      "type": "string",
      "required": false,
      "description": "表单字段名称，van-form 必需",
      "default": "idCard",
      "control": "input"
    },
    {
      "name": "enableBuiltInValidation",
      "title": "启用内置校验",
      "type": "boolean",
      "required": false,
      "description": "是否启用内置身份证格式校验",
      "default": true,
      "control": "switch",
      "options": [true, false]
    },
    {
      "name": "trigger",
      "title": "校验触发时机",
      "type": "string",
      "required": false,
      "description": "校验规则的触发时机",
      "default": "onBlur",
      "control": "radio",
      "options": [
        { "label": "默认", "value": "" },
        { "label": "失焦时校验", "value": "onBlur" },
        { "label": "输入时校验", "value": "onChange" }
      ]
    },
    {
      "name": "supportedLengths",
      "title": "支持的身份证位数",
      "type": "array",
      "required": false,
      "description": "支持的身份证位数",
      "default": [15, 18],
      "control": "input"
    }
  ],
  "events": [
    {
      "name": "update:modelValue",
      "description": "值变化时触发",
      "params": "(value: string)"
    },
    {
      "name": "input",
      "description": "输入时触发",
      "params": "(value: string)"
    },
    {
      "name": "blur",
      "description": "失焦时触发",
      "params": "(event: Event)"
    },
    {
      "name": "focus",
      "description": "聚焦时触发",
      "params": "(event: Event)"
    },
    {
        "name": "id-parsed",
        "description": "身份证号码变为有效时触发，抛出身份证信息",
        "params": "(info: IdCardInfo)"
      }
  ],
  "expose": [
    {
      "name": "value",
      "description": "当前输入的身份证号码",
      "type": "ComputedRef<string>"
    },
    {
      "name": "isValid",
      "description": "身份证号码是否有效",
      "type": "ComputedRef<boolean>"
    },
    {
      "name": "idCardInfo",
      "description": "身份证信息对象，包含地区、出生日期、年龄、性别等",
      "type": "ComputedRef<IdCardInfo>"
    },
    {
      "name": "getIdCardInfo",
      "description": "获取身份证信息的方法",
      "type": "() => IdCardInfo"
    }
  ]
}