{
  "componentName": "CertField",
  "componentTitle": "证件输入框",
  "importDesc": "import { CertField } from '@shared/h5-field/CertField'",
  "description": "专用于证件信息输入的表单组件，支持身份证、护照、港澳台通行证等多种证件类型的选择和输入验证",
  "props": [
    {
      "name": "modelValue",
      "title": "证件号码",
      "type": "string",
      "required": false,
      "description": "证件号码值",
      "default": "",
      "control": "input"
    },
    {
      "name": "v-model:cert-type",
      "title": "证件类型",
      "type": "string",
      "required": false,
      "description": "当前选中的证件类型",
      "default": "certType",
      "visible": false
    },
    {
      "name": "placeholder",
      "title": "占位符",
      "type": "string",
      "required": false,
      "description": "输入框占位符文本",
      "default": "请输入证件号码",
      "control": "input"
    },
    {
      "name": "required",
      "title": "是否必填",
      "type": "boolean",
      "required": false,
      "description": "是否为必填项",
      "default": false,
      "control": "switch",
      "options": [true, false]
    },
    {
      "name": "readonly",
      "title": "是否只读",
      "type": "boolean",
      "required": false,
      "description": "是否为只读状态",
      "default": false,
      "control": "switch",
      "options": [true, false]
    },
    {
      "name": "disabled",
      "title": "是否禁用",
      "type": "boolean",
      "required": false,
      "description": "是否禁用输入框",
      "default": false,
      "control": "switch",
      "options": [true, false]
    },
    {
      "name": "clearable",
      "title": "是否可清空",
      "type": "boolean",
      "required": false,
      "description": "是否显示清空按钮",
      "default": true,
      "control": "switch",
      "options": [true, false]
    },
    {
      "name": "certValueName",
      "title": "证件号码字段名",
      "type": "string",
      "required": false,
      "description": "证件号码表单项的name属性",
      "default": "certValue",
      "control": "input"
    },
    {
      "name": "certTypeName",
      "title": "证件类型字段名",
      "type": "string",
      "required": true,
      "description": "证件类型表单项的name属性",
      "default": "certType",
      "control": "input"
    },
    {
      "name": "rules",
      "title": "验证规则",
      "type": "array",
      "required": false,
      "description": "证件号码的验证规则",
      "default": "[]",
      "control": "input"
    },
    {
      "name": "certTypeRules",
      "title": "证件类型验证规则",
      "type": "array",
      "required": false,
      "description": "证件类型的验证规则，参考van-form的rules",
      "default": "[]",
      "control": ""
    },
    {
      "name": "enableBuiltInValidation",
      "title": "启用内置验证",
      "type": "boolean",
      "required": false,
      "description": "是否启用内置的证件格式验证",
      "default": true,
      "control": "switch",
      "options": [true, false]
    },
    {
      "name": "trigger",
      "title": "验证触发时机",
      "type": "string",
      "required": false,
      "description": "验证触发的时机",
      "default": "onBlur",
      "control": "radio",
      "options": [
        { "label": "输入时", "value": "onChange" },
        { "label": "失焦时", "value": "onBlur" },
        { "label": "提交时", "value": "onSubmit" }
      ]
    },
    {
      "name": "supportedTypes",
      "title": "支持的证件类型",
      "type": "array",
      "required": false,
      "description": "支持选择的证件类型列表",
      "default": "[\"1\", \"2\"]",
      "control": "checkbox",
      "options": [
        { "label": "身份证", "value": "1" },
        { "label": "护照", "value": "2" },
        { "label": "港澳台回乡证", "value": "6" },
        { "label": "出生证", "value": "A" },
        { "label": "户口本", "value": "L" },
        { "label": "军事证", "value": "3" },
        { "label": "司机执照", "value": "7" },
        { "label": "外国永久居民身份证", "value": "o" }
      ]
    }
  ],
  "events": [
    {
      "name": "update:modelValue",
      "description": "证件号码更新时触发",
      "params": "value: string"
    },
    {
      "name": "update:certType",
      "description": "证件类型更新时触发",
      "params": "type: CertType"
    },
    {
      "name": "input",
      "description": "输入时触发",
      "params": "value: string"
    },
    {
      "name": "blur",
      "description": "失焦时触发",
      "params": "event: Event"
    },
    {
      "name": "focus",
      "description": "聚焦时触发",
      "params": "event: Event"
    },
    {
      "name": "cert-parsed",
      "description": "证件信息解析完成时触发",
      "params": "info: CertificationInfo"
    }
  ],
  "methods": [
    {
      "name": "getCertificationInfo",
      "description": "获取当前证件信息",
      "returns": "CertificationInfo"
    }
  ],
  "slots": []
}
