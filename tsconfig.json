{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
      "vite/client",
      "vue"
    ],
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@giom/shared": ["packages/shared/index.ts"],
      "@giom/shared/*": ["packages/shared/src/*"]
    }
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    "packages/*/src/**/*.vue",
    "packages/*/src/**/*.d.ts",
    "types/*.d.ts"
, "packages/shared/components/ImageList.vue", "packages/shared/planBookComponents/Catalog.vue", "packages/shared/planBookComponents/Cover.vue", "packages/shared/planBookComponents/ImageModule.vue", "packages/shared/planBookComponents/ServicePromise.vue", "packages/shared/planBookComponents/types.ts", "packages/shared/planBookComponents/ModuleContainer.vue"  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}